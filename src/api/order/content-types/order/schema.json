{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "progress": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": false,
      "default": "process",
      "enum": [
        "process",
        "accepted",
        "completed",
        "cancelled",
        "returning"
      ]
    },
    "discount": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::discount.discount"
    },
    "address": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address",
      "inversedBy": "orders"
    },
    "description": {
      "type": "text",
      "required": false
    },
    "orderDetails": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-detail.order-detail",
      "mappedBy": "order"
    }
  }
}
